@page
@{
    ViewData["Title"] = "JavaScript Calculator";
}
<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet" />
<head>
</head>
<body>
    <div class="text-center">
        <h1> JavaScript Calculator</h1>
    </div>

    <div id="calcOutput">
        <p id="screen">0</p>
        <hr />
    </div>
    <div class="text-center" id="calculator">
        <button class="btn btn-danger" id="MC"><b>MC</b></button>
        <button class="btn btn-warning" id="M-"><b>M-</b></button>
        <button class="btn btn-warning" id="M+"><b>M+</b></button>
        <button class="btn btn-warning" id="MR"><b>MR</b></button>
        <br />
        <button class="btn btn-danger" id="clearAll"><b>C</b></button>
        <button class="btn btn-danger" id="clearScreen"><b>CE</b></button>
        <button class="btn btn-danger" id="backspace"><b>DEL</b></button>
        <button class="btn btn-success" id="*"><b>X</b></button>
        <br />
        <button class="btn btn-primary nums" id="7"><b>7</b></button>
        <button class="btn btn-primary nums" id="8"><b>8</b></button>
        <button class="btn btn-primary nums" id="9"><b>9</b></button>
        <button class="btn btn-success" id="/"><b>/</b></button>
        <br />
        <button class="btn btn-primary nums" id="4"><b>4</b></button>
        <button class="btn btn-primary nums" id="5"><b>5</b></button>
        <button class="btn btn-primary nums" id="6"><b>6</b></button>
        <button class="btn btn-success" id="-"><b>-</b></button>
        <br />
        <button class="btn btn-primary nums" id="1"><b>1</b></button>
        <button class="btn btn-primary nums" id="2"><b>2</b></button>
        <button class="btn btn-primary nums" id="3"><b>3</b></button>
        <button class="btn btn-success" id="+"><b>+</b></button>
        <br />
        <button class="btn btn-primary" id="%"><b>%</b></button>
        <button class="btn btn-primary nums" id="0"><b>0</b></button>
        <button class="btn btn-primary" id="."><b>.</b></button>
        <button class="btn btn-primary" id="equals" style="background-color:darkblue"><b>=</b></button>
    </div>
</body>